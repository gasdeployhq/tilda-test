{
  "name": "yourname/php_oop_tasks",
  "description": "PHP OOP tasks project with PSR-4 autoloading",
  "require": {},
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "app/tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit app/tests"
  }
}
